@model FilterViewModel
@{
    ViewData["Title"] = "Find Task(s)";
}
<h2>@ViewData["Title"]</h2>

<form asp-controller="ToDo" asp-action="Search" method="post" class="form-horizontal">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="DescriptionFilter" class="col-md-2 control-label">Description</label>
        <div class="col-md-10">
            <input asp-for="DescriptionFilter" class="form-control" />
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <div class="checkbox">
                <label class="control-label"></label>
                <input asp-for="IsCompletedFilter" /> Completed?
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <div class="checkbox">
                <label class="control-label"></label>
                <input asp-for="Both" /> Both
            </div>
        </div>
    </div>
    <div class=" form-group">
        <div class="col-md-offset-2 col-md-10">
            <button type="submit" class="btn btn-success">Find</button>
        </div>
    </div>
</form>